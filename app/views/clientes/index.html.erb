<html>
<head>
<link href="estilo.css" rel="stylesheet" type="text/css">
<meta content="text/html; charset=ISO-8859-1" http-equiv="content-type">
<title>Ret-Car - Locação de veículos</title>
</meta></head>
<body>

<div id="GERAL">

   <div id="TOPO"> 
        <img src="/images/logo_01.gif"> </img> 
   </div>
      <div id="MENU"> 
		    <a href="/carros"> Carros</a> 
			<a href="/clientes"> Clientes</a> 
			<a href="#"> Locações</a>
		</div>
   <div id="CONTEUDO">
          <b> Listagem de Clientes</b>
          <span id=linknew> <%= link_to 'Novo Cliente', new_cliente_path%> </span>
		   <hr>
		   <table width="300" class="mytable">
		    <tr>
              <th width=15%>Nome</th>
              <th>Nascimento</th>
              <th width=15%>CPF</th>
              <th>Habilitacao</th>
              <th>Telefone</th>
              <th>Logradouro</th>
              <th>Numero</th>
              <th>Bairro</th>
              <th>Municipio</th>
              <th>Estado</th>
              <th colspan=2 >Ações</th>
            </tr>
	<% @clientes.each do |cliente| %>
	<tr>
    <td><%= cliente.nome %></td>
    <td><%= cliente.data_nascimento %></td>
    <td><%= cliente.cpf %></td>
	<td><%= cliente.habilitacao %></td>
    <td><%= cliente.telefone %></td>
	<td><%= cliente.logradouro %></td>
    <td><%= cliente.numero %></td>
    <td><%= cliente.bairro %></td>
    <td><%= cliente.municipio %></td>
    <td><%= cliente.estado %></td>
    <td><%= link_to 'E', edit_cliente_path(cliente), :title => 'Editar' %></td>
    <td><%= link_to 'R', cliente, :confirm => "Tem certeza que deseja remover o cliente #{cliente.try(:nome)}?", :method => :delete, :title => 'Remover' %></td>
  </tr>
  <% end %>
    </table>
		 
		
    </div>
 
   
  
 </div>

</body>
</html>